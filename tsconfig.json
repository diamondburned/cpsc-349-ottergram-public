{
  "version": "2.0.2",
  "compilerOptions": {
    "lib": ["es5", "es2015.promise", "dom", "es2015"],
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "module": "es2015",
    "moduleResolution": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "allowJs": true,
    "checkJs": false
  },
  "exclude": ["node_modules"]
}
